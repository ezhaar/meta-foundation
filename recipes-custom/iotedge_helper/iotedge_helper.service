[Unit]
Description=IoTEdge home mount @LOCALSTATEDIR@/local/lib/aziot -> @LOCALSTATEDIR@/lib/aziot.
DefaultDependencies=no
Conflicts=umount.target
After=local-fs.target

[Service]
ExecStartPre=@BASE_BINDIR@/setup_aziot_dirs.sh
ExecStart=@BASE_BINDIR@/mount -o bind @LOCALSTATEDIR@/local/lib/aziot @LOCALSTATEDIR@/lib/aziot
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target